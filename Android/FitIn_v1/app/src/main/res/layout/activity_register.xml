<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_begin="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_end="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/iv_back"
        app:layout_constraintEnd_toStartOf="@id/tv_registerTitle"
        app:layout_constraintStart_toEndOf="@id/gl_start"
        app:layout_constraintTop_toTopOf="@id/tv_registerTitle" />

    <ImageView
        android:id="@+id/tv_registerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_horizontal"
        android:src="@drawable/iv_register"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/gl_end"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/et_input"
        android:hint="@string/register_name_hint"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="@id/gl_start"
        app:layout_constraintRight_toRightOf="@id/gl_end"
        app:layout_constraintTop_toBottomOf="@id/tv_registerTitle" />

    <EditText
        android:id="@+id/et_emailId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/et_email_f"
        android:hint="@string/register_emailId_hint"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="@id/gl_start"
        app:layout_constraintRight_toLeftOf="@id/tv_symbol"
        app:layout_constraintTop_toTopOf="@id/et_email" />

    <TextView
        android:id="@+id/tv_symbol"
        android:layout_width="16dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/register_symbol"
        app:layout_constraintLeft_toRightOf="@id/et_emailId"
        app:layout_constraintRight_toLeftOf="@id/et_email"
        app:layout_constraintTop_toTopOf="@id/et_emailId" />


    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_email_b"
        android:hint="@string/register_email_hint"
        android:padding="8dp"
        app:layout_constraintLeft_toRightOf="@id/tv_symbol"
        app:layout_constraintRight_toRightOf="@id/gl_end"
        app:layout_constraintTop_toBottomOf="@id/et_name" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_input"
        android:hint="@string/register_password_hint"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="@id/gl_start"
        app:layout_constraintRight_toRightOf="@id/gl_end"
        app:layout_constraintTop_toBottomOf="@id/et_email" />

    <EditText
        android:id="@+id/et_passwordCheck"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_input"
        android:hint="@string/register_password_check_hint"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="@id/gl_start"
        app:layout_constraintRight_toRightOf="@id/gl_end"
        app:layout_constraintTop_toBottomOf="@id/et_password" />

    <ImageButton
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_register"
        android:text="@string/register_button_text"
        app:layout_constraintLeft_toLeftOf="@+id/gl_start"
        app:layout_constraintRight_toRightOf="@id/gl_end"
        app:layout_constraintTop_toBottomOf="@+id/et_passwordCheck" />

    <TextView
        android:id="@+id/tv_findId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:gravity="center_horizontal"
        android:text="@string/find_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/gl_start"
        app:layout_constraintRight_toRightOf="@+id/gl_end" />

</androidx.constraintlayout.widget.ConstraintLayout>