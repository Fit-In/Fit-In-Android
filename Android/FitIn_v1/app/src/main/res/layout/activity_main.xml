<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fitin_v1.MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GuideBegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_begin="16dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GuideEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_end="16dp"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iv_fitin"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/GuideBegin"
        app:layout_constraintRight_toRightOf="@+id/GuideEnd" />

    <TextView
        android:id="@+id/Title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마음 맞는 사람들과\n특별한 스터디를 시작해보세요"
        android:textColor="#191919"
        android:fontFamily="@font/font_wandohope_r"
        android:textSize="24sp"
        android:lineSpacingExtra="16sp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        app:layout_constraintLeft_toLeftOf="@+id/GuideBegin"
        app:layout_constraintRight_toRightOf="@+id/GuideEnd" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintTop_toBottomOf="@+id/Title2"
        app:layout_constraintLeft_toLeftOf="@+id/GuideBegin"
        app:layout_constraintRight_toRightOf="@+id/GuideEnd"
        android:src="@drawable/iv_title"/>

    <ImageButton
        android:id="@+id/BtnPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_phone"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/GuideBegin"
        app:layout_constraintRight_toRightOf="@+id/GuideEnd" />

    <ImageButton
        android:id="@+id/BtnNaver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_naver"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/BtnGoogle"
        app:layout_constraintRight_toLeftOf="@+id/BtnGoogle"
        app:layout_constraintLeft_toRightOf="@+id/GuideBegin" />

    <ImageButton
        android:id="@+id/BtnGoogle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_google"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/BtnPhone"
        app:layout_constraintLeft_toRightOf="@+id/BtnNaver"
        app:layout_constraintRight_toRightOf="@+id/GuideEnd" />



    <TextView
        android:id="@+id/TextLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/GuideBegin"
        app:layout_constraintRight_toRightOf="@+id/GuideEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="64dp"
        android:textColor="#191919"
        android:text="이미 가입하셨나요? 로그인하기"/>

</androidx.constraintlayout.widget.ConstraintLayout>