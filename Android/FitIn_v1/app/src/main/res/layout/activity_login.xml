<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GuideBegin"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GuideEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_end="24dp"
        android:orientation="vertical"/>

    <ImageButton
        android:id="@+id/ivback"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ivback"
        app:layout_constraintBottom_toTopOf="@id/EditId"
        app:layout_constraintLeft_toRightOf="@id/GuideBegin"
        app:layout_constraintRight_toLeftOf="@id/TvLogin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TvLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="30sp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="52dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivback"
        app:layout_constraintRight_toRightOf="@+id/GuideEnd"
        app:layout_constraintBottom_toTopOf="@+id/EditId"/>

    <EditText
        android:id="@+id/EditId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:hint="이메일을 입력해주세요."
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/EditPw"
        app:layout_constraintLeft_toLeftOf="@id/GuideBegin"
        app:layout_constraintRight_toRightOf="@id/GuideEnd"
        app:layout_constraintTop_toBottomOf="@id/TvLogin"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/EditPw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력해주세요."
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/RgLogin"
        app:layout_constraintLeft_toLeftOf="@id/GuideBegin"
        app:layout_constraintRight_toRightOf="@id/GuideEnd"
        app:layout_constraintTop_toBottomOf="@id/EditId"
        app:layout_constraintVertical_chainStyle="packed"/>



    <RadioGroup
        android:id="@+id/RgLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/EditPw"
        app:layout_constraintLeft_toLeftOf="@id/GuideBegin"
        app:layout_constraintRight_toRightOf="@+id/GuideEnd"
        app:layout_constraintBottom_toTopOf="@+id/BtnLogin"
        android:orientation="horizontal"
        android:gravity="right">
        <RadioButton
            android:id="@+id/RbAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자동 로그인"/>
        <RadioButton
            android:id="@+id/RbSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 저장"/>
    </RadioGroup>

    <Button
        android:id="@+id/BtnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/GuideBegin"
        app:layout_constraintRight_toRightOf="@id/GuideEnd"
        app:layout_constraintTop_toBottomOf="@+id/RgLogin"
        app:layout_constraintBottom_toTopOf="@+id/BtnNaver"
        android:text="로그인"/>

    <Button
        android:id="@+id/BtnNaver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="네이버"
        android:layout_marginRight="6dp"
        app:layout_constraintLeft_toLeftOf="@id/GuideBegin"
        app:layout_constraintTop_toBottomOf="@id/BtnLogin"
        app:layout_constraintRight_toLeftOf="@id/BtnFacebook"
        app:layout_constraintBottom_toTopOf="@+id/TvFind"
        app:layout_constraintVertical_chainStyle="packed"/>
    <Button
        android:id="@+id/BtnFacebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toRightOf="@+id/BtnNaver"
        app:layout_constraintTop_toBottomOf="@+id/BtnLogin"
        app:layout_constraintRight_toRightOf="@id/GuideEnd"
        app:layout_constraintBottom_toTopOf="@+id/TvFind"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="페이스북"/>


    <TextView
        android:id="@+id/TvFind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="계정을 잊으셨나요? 아이디 또는 비밀번호 찾기"
        app:layout_constraintTop_toBottomOf="@+id/BtnNaver"
        app:layout_constraintLeft_toLeftOf="@id/GuideBegin"
        app:layout_constraintRight_toRightOf="@+id/GuideEnd"
        app:layout_constraintBottom_toTopOf="@+id/TvRegister"/>

    <TextView
        android:id="@+id/TvRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="48dp"
        app:layout_constraintTop_toBottomOf="@+id/TvFind"
        app:layout_constraintLeft_toLeftOf="@+id/GuideBegin"
        app:layout_constraintRight_toRightOf="@+id/GuideEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="핏인이 처음이신가요? 회원가입" />

</androidx.constraintlayout.widget.ConstraintLayout>