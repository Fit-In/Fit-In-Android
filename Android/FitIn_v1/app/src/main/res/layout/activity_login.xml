<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GuideBegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GuideEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_end="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ivback"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/iv_back"
        app:layout_constraintLeft_toRightOf="@id/GuideBegin"
        app:layout_constraintRight_toLeftOf="@id/TvLogin"
        app:layout_constraintTop_toTopOf="@id/TvLogin" />

    <ImageView
        android:id="@+id/TvLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_horizontal"
        android:src="@drawable/iv_login"
        app:layout_constraintLeft_toRightOf="@+id/ivback"
        app:layout_constraintRight_toRightOf="@+id/GuideEnd"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EditId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/et_input"
        android:hint="이메일을 입력해주세요."
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="@id/GuideBegin"
        app:layout_constraintRight_toRightOf="@id/GuideEnd"
        app:layout_constraintTop_toBottomOf="@id/TvLogin" />

    <EditText
        android:id="@+id/EditPw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_input"
        android:hint="비밀번호를 입력해주세요."
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="@id/GuideBegin"
        app:layout_constraintRight_toRightOf="@id/GuideEnd"
        app:layout_constraintTop_toBottomOf="@id/EditId" />


    <RadioGroup
        android:id="@+id/RgLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@id/GuideBegin"
        app:layout_constraintRight_toRightOf="@+id/GuideEnd"
        app:layout_constraintTop_toBottomOf="@+id/EditPw">

        <RadioButton
            android:id="@+id/RbAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자동 로그인" />

        <RadioButton
            android:id="@+id/RbSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 저장" />
    </RadioGroup>

    <ImageButton
        android:id="@+id/BtnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_login"
        app:layout_constraintLeft_toLeftOf="@+id/GuideBegin"
        app:layout_constraintRight_toRightOf="@id/GuideEnd"
        app:layout_constraintTop_toBottomOf="@+id/RgLogin" />

    <ImageButton
        android:id="@+id/BtnNaver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_naver_login"
        android:text="네이버"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@id/GuideBegin"
        app:layout_constraintRight_toLeftOf="@id/BtnGoogle"
        app:layout_constraintTop_toTopOf="@id/BtnGoogle" />

    <ImageButton
        android:id="@+id/BtnGoogle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_google_login"
        app:layout_constraintLeft_toRightOf="@+id/BtnNaver"
        app:layout_constraintRight_toRightOf="@id/GuideEnd"
        app:layout_constraintTop_toBottomOf="@+id/BtnLogin"
        app:layout_constraintHorizontal_chainStyle="packed"/>


    <TextView
        android:id="@+id/TvFind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="계정을 잊으셨나요? 아이디 또는 비밀번호 찾기"
        app:layout_constraintLeft_toLeftOf="@id/GuideBegin"
        app:layout_constraintRight_toRightOf="@+id/GuideEnd"
        app:layout_constraintTop_toBottomOf="@+id/BtnGoogle" />

    <TextView
        android:id="@+id/TvRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:gravity="center_horizontal"
        android:text="핏인이 처음이신가요? 회원가입"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/GuideBegin"
        app:layout_constraintRight_toRightOf="@+id/GuideEnd" />

</androidx.constraintlayout.widget.ConstraintLayout>